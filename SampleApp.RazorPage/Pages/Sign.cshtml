@page "/Sign"

@model SampleApp.RazorPage.Pages.SignModel
@{
    ViewData["Title"] = "Регистрация";
}

<div class="container text-center">
    <h1> Регистрация</h1>

    <div class="row border border-0 border-warning">
        <div class="col-6 offset-3 border border-0 border-primary">
            <form action="" method="post" class="form-signin" role="form">
                <input type="text" name="Name" class="form-control" placeholder="Name" required autofocus>
                <input type="email" name="Email" class="form-control" placeholder="Email" required autofocus>
                <input type="password" name="Password" class="form-control" placeholder="Password" required autofocus>
                <input type="password" name="PasswordConfirmation" class="form-control" placeholder="Confirmation" required>
                <button class="btn btn-lg btn-primary btn-block" type="submit" name="submit">
                    Создать пользователя
                </button>
            </form>
        </div>
    </div>

</div>


